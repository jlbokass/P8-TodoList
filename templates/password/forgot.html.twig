{% extends 'base.html.twig' %}

{% block title %}Demande de réinitialisation {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/log.css') }}">
{% endblock %}

{% block body %}
    <form method="post" class="form-signin mt-5">
        <div class="card">
            <div class="card-body">
                <h1 class="h3 mb-3 font-weight-normal text-center">Réinitialisez</h1>
                {{ form_start(emailToResetPassword, {'attr': {
                    'novalidate': 'novalidate'
                }}) }}
                    {{ form_label(emailToResetPassword.email) }}
                    {{ form_widget(emailToResetPassword.email) }}
                    {{ form_help(emailToResetPassword.email) }}
                    <button class="btn btn-md btn-primary mt-2" type="submit">
                        Envoyez
                    </button>
                {{ form_end(emailToResetPassword) }}
            </div>
        </div>
    </form>
{% endblock %}
